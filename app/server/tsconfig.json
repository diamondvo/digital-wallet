{
  "compilerOptions": {
    "target": "es2019",
    "types": ["node"],
    "lib": ["es6", "es7", "dom", "es2019"],
    "baseUrl": ".",
    "rootDir": ".",
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "outDir": "./build",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "@server/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"]
}